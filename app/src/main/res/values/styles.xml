<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_color_primary</item>
        <item name="colorPrimaryDark">@color/app_color_primary_dark</item>
        <item name="colorAccent">@color/app_color_accent</item>


        <item name="android:colorPrimary">@color/app_color_primary</item>
        <item name="android:colorPrimaryDark">@color/app_color_primary_dark</item>
        <item name="android:colorAccent">@color/app_color_accent</item>

    </style>

    <style name="AppTheme" parent="BaseAppTheme">
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:toolbarStyle">@style/ToolbarStyle</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>

        <item name="android:contentInsetStart">0dp</item>
        <item name="android:contentInsetEnd">0dp</item>

        <item name="android:textColor">@color/swipe_refresh_color_scheme_blue_1</item>
        <item name="android:textAppearance">?attr/textAppearanceListItem</item>
        <item name="android:textColorPrimary">@color/swipe_refresh_color_scheme_green_1</item>
        <item name="android:textColorSecondary">@color/swipe_refresh_color_scheme_red_1</item>
    </style>


    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyTabTextAppearanceStyle</item>

    </style>

    <style name="MyTabTextAppearanceStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ParallaxTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_color_primary</item>
        <item name="colorPrimaryDark">@color/app_color_primary_dark</item>
        <item name="colorAccent">@color/app_color_accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorPrimary">@color/app_color_primary</item>
        <item name="android:colorPrimaryDark">@color/app_color_primary_dark</item>
        <item name="android:colorAccent">@color/app_color_accent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="OverlayParallaxTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_color_primary</item>
        <item name="colorPrimaryDark">@color/app_color_primary_dark</item>
        <item name="colorAccent">@color/app_color_accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
