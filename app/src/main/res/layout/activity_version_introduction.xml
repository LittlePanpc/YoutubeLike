<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.danielpan.youtubelike.VersionIntroductionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_appcompat"></include>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="clip_horizontal"
            android:layout_margin="4dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="@string/android_introduction"
            android:textAllCaps="false"
            android:textColor="@color/swipe_refresh_color_scheme_green"
            android:textSize="20sp" />

    </LinearLayout>
</ScrollView>

