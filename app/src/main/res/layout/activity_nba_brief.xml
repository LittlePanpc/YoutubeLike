<me.danielpan.youtubelike.widget.ListenedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/listened_scroll_view"
    android:layout_height="match_parent"
    tools:context="me.danielpan.youtubelike.NbaBriefActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_appcompat"></include>

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="clip_horizontal"
            android:layout_margin="4dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="@string/nbs_brief"
            android:textAllCaps="false"
            android:textColor="@color/swipe_refresh_color_scheme_green"
            android:textSize="20sp" />

    </LinearLayout>
</me.danielpan.youtubelike.widget.ListenedScrollView>

