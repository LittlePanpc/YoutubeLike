<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="me.danielpan.youtubelike">

    <uses-sdk tools:overrideLibrary="de.hdodenhof.circleimageview" />

    <!--<uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--android:maxSdkVersion="18" -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".VersionIntroductionActivity"
            android:label="@string/title_activity_version_introduction" />
        <activity
            android:name=".SongListActivity"
            android:label="@string/title_activity_song_list" />
        <activity
            android:name=".NbaBriefActivity"
            android:label="@string/title_activity_nba_brief" />
        <activity
            android:name=".SettingsGeneralActivity"
            android:label="@string/title_activity_general"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/title_activity_profile"
            android:logo="@mipmap/header"
            android:theme="@style/ParallaxTheme" />
        <activity
            android:name=".OverlayProfileActivity"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/title_activity_overlay_profile"
            android:logo="@mipmap/header"
            android:theme="@style/OverlayParallaxTheme" />
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register" />
        <activity
            android:name=".PlayActivity"
            android:label="@string/title_activity_play"></activity>
    </application>

</manifest>
